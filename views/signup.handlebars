<section
  id='signupForm'
  class='border-[2px] w-[800px] mt-[50px] flex p-[20px] flex-col justify-center items-center'
>
  <h2 class='text-[2.5rem]'>Sign Up</h2>
  <form id='signupForm' class="w-full flex flex-col" action='/signup' method='post'>

    <div class='form-group mb-[10px]'>
      <label class='block font-bold' for='firstName'>First Name</label>
      <input
        class='border-[1px] w-full p-[5px] w-full'
        type='text'
        id='firstName'
        name='firstName'
        required
      />
    </div>

    <div class='form-group mb-[10px]'>
      <label class='block font-bold' for='email'>Last Name</label>
      <input
        class='border-[1px] w-full p-[5px] w-full'
        type='text'
        id='lastName'
        name='lastName'
        required
      />
    </div>

    <div class='form-group mb-[10px] '>
      <label class='block font-bold' for='username'>Username</label>
      <input
        class='border-[1px] p-[5px] w-full                  '
        type='text'
        id='username'
        name='username'
        required
      />
    </div>

    <div class='form-group mb-[10px]'>
      <label class='block font-bold' for='email'>Email</label>
      <input
        class='border-[1px] w-full p-[5px] w-full'
        type='email'
        id='email'
        name='email'
        required
      />
    </div>


    <div class='form-group mb-[10px]'>
      <label class='block font-bold' for='password'>Password</label>
      <input
        class='border-[1px] w-full p-[5px] w-full'
        type='password'
        id='password'
        name='password'
        required
      />
    </div>

    <button class='bg-black text-white w-full p-[10px] rounded-md my-[15px]' type='submit'>Sign Up</button>
    <p class="m-auto">Already have an account? <a href='/login' class="font-bold underline">Login</a></p>
  </form>
</section>